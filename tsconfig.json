{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "outDir": "./dist/",
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "./src/main.ts"
  ]
}